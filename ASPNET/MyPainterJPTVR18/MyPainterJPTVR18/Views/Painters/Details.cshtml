@model MyPainterJPTVR18.Models.Painter

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Player - @Model.Name (Картина - @Model.Picture.Title)</h4>
    <hr />

    <div class="panel panel-default">
        <div class="panel-body">
            @if (Model.Photo != null)
            {
                <img src="@Url.Action("GetImage", new { Model.Id })" class="img-rounded" />
            }
            <h3>@Html.DisplayFor(model => model.Name)</h3>
            <p>@Html.DisplayNameFor(model => model.Age) - @Html.DisplayFor(model => model.Age)</p>
            <p>@Html.DisplayNameFor(model => model.Position) - @Html.DisplayFor(model => model.Position)</p>
            <p>@Html.DisplayNameFor(model => model.Team.Name) - @Html.DisplayFor(model => model.Team.Name)</p>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
